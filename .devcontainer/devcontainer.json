{
  "name": "Claude CodePro",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name",
    "claude-codepro"
  ],
  "workspaceFolder": "/workspaces/claude-codepro",
  "customizations": {
    "vscode": {
      "extensions": [
        "actboy168.tasks",
        "anthropic.claude-code",
        "charliermarsh.ruff",
        "CodeRabbit.coderabbit-vscode",
        "dbaeumer.vscode-eslint",
        "dotenv.dotenv-vscode",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "github.github-vscode-theme",
        "lumirelle.shell-format-rev",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy",
        "ms-python.mypy-type-checker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "pkief.material-icon-theme",
        "postman.postman-for-vscode",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "yzhang.markdown-all-in-one",
        "zilliz.semanticcodesearch"
      ]
    }
  },
  "forwardPorts": [
    5433 // PostgreSQL
  ],
  "portsAttributes": {
    "5433": {
      "label": "postgresql"
    }
  },
  /* GET FROM: https://containers.dev/features */
  "features": {
    /* https://github.com/devcontainers/features/tree/main/src/common-utils */
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "configureZshAsDefaultShell": true
    },
    /* https://github.com/devcontainers/features/tree/main/src/node */
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22", // Claude Context is not compatible with later versions
      "nvm": "latest",
      "pnpm": "latest"
    },
    /* https://github.com/devcontainers/features/tree/main/src/docker-in-docker */
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false,
      "version": "latest"
    },
    /* https://github.com/va-h/devcontainers-features/tree/main/src/uv */
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "version": "latest",
      "shellautocompletion": true
    },
    /* https://github.com/devcontainers-extra/features/tree/main/src/ruff */
    "ghcr.io/devcontainers-extra/features/ruff:1": {
      "version": "latest"
    },
    /* https://github.com/devcontainers-extra/features/tree/main/src/mypy */
    "ghcr.io/devcontainers-extra/features/mypy:2": {
      "version": "latest"
    },
    /* https://github.com/devcontainers/features/tree/main/src/git */
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    /* https://github.com/devcontainers-extra/features/tree/main/src/fzf */
    "ghcr.io/devcontainers-extra/features/fzf:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": ".devcontainer/postCreateCommand.sh",
  "remoteUser": "root",
  "containerUser": "root"
}
