{
  "name": "claude-codepro",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--name",
    "claude-codepro"
  ],
  "workspaceFolder": "/workspaces/claude-codepro",
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "dotenv.dotenv-vscode",
        "esbenp.prettier-vscode",
        "github.github-vscode-theme",
        "lumirelle.shell-format-rev",
        "ms-python.debugpy",
        "ms-python.python",
        "detachhead.basedpyright",
        "pkief.material-icon-theme",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "dkodr.claudeboard",
        "kaleidoscope-app.vscode-ksdiff"
      ]
    }
  },
  "forwardPorts": [
    37777 // claude-mem
  ],
  "portsAttributes": {
    "37777": {
      "label": "claude-mem"
    }
  },
  /* GET FROM: https://containers.dev/features */
  "features": {
    /* https://github.com/devcontainers/features/tree/main/src/common-utils */
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true,
      "configureZshAsDefaultShell": true
    },
    /* https://github.com/devcontainers/features/tree/main/src/python */
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": false
    },
    /* https://github.com/devcontainers/features/tree/main/src/node */
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nvm": "latest",
      "pnpm": "latest"
    },
    /* https://github.com/devcontainers/features/tree/main/src/go */
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest",
      "golangciLintVersion": "latest"
    },
    /* https://github.com/devcontainers/features/blob/main/src/docker-outside-of-docker/ */
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": "false",
      "dockerDashComposeVersion": "v1",
      "installDockerBuildx": "false",
      "installDockerComposeSwitch": "false"
    },
    /* https://github.com/va-h/devcontainers-features/tree/main/src/uv */
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "version": "latest",
      "shellautocompletion": true
    },
    /* https://github.com/devcontainers/features/tree/main/src/git */
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    /* https://github.com/devcontainers/features/tree/main/src/github-cli */
    "ghcr.io/devcontainers/features/github-cli:1": {},
    /* https://github.com/michidk/devcontainers-features/tree/main/src/bun */
    "ghcr.io/michidk/devcontainers-features/bun:1": {},
    /* https://github.com/braun-daniel/devcontainer-features/blob/main/src/spaceship */
    "ghcr.io/braun-daniel/devcontainer-features/spaceship:1": {},
    /* https://github.com/braun-daniel/devcontainer-features/blob/main/src/fzf */
    "ghcr.io/braun-daniel/devcontainer-features/fzf:1": {}
  },
  "postCreateCommand": "curl -fsSL https://raw.githubusercontent.com/maxritter/claude-codepro/v5.1.5/install.sh | bash",
  "remoteUser": "root",
  "containerUser": "root"
}
