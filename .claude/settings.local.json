{
  "env": {
    "ANTHROPIC_CUSTOM_HEADERS": "anthropic-beta: interleaved-thinking-2025-05-14",
    "MAX_MCP_OUTPUT_TOKENS": "10000",
    "MAX_THINKING_TOKENS": "31999",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "63999",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "true",
    "DISABLE_TELEMETRY": "true"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(basedpyright:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(mypy:*)",
      "Bash(python tests:*)",
      "Bash(python:*)",
      "Bash(pyright:*)",
      "Bash(pytest:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(uv add:*)",
      "Bash(uv pip show:*)",
      "Bash(uv pip:*)",
      "Bash(uv run:*)",
      "Edit",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Read",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__ide__getDiagnostics",
      "mcp__Ref__ref_read_url",
      "mcp__Ref__ref_search_documentation",
      "mcp__claude-context__index_codebase",
      "mcp__claude-context__get_indexing_status",
      "mcp__claude-context__search_code",
      "mcp__mcp-funnel__discover_tools_by_words",
      "mcp__mcp-funnel__get_tool_schema",
      "mcp__mcp-funnel__bridge_tool_request",
      "mcp__cipher__ask_cipher",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__dbhub-postgres__execute_sql",
      "mcp__mcp-funnel__load_toolset",
      "SlashCommand(/remember:*)",
      "SlashCommand(/implement:*)",
      "SlashCommand(/plan:*)",
      "SlashCommand(/verify:*)",
      "SlashCommand(/quick:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "Ref",
    "context7",
    "claude-context",
    "cipher",
    "dbhub-postgres",
    "mcp-funnel"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/claude-codepro/.claude/hooks/file_checker_qlty.sh"
          },
          {
            "type": "command",
            "command": "/workspaces/claude-codepro/.claude/hooks/file_checker_python.sh"
          }
        ]
      }
    ]
  },
  "outputStyle": "default",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
