{
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "ENABLE_LSP_TOOL": "true",
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "63999",
    "MAX_MCP_OUTPUT_TOKENS": "22000",
    "DISABLE_AUTO_COMPACT": "true",
    "DISABLE_COMPACT": "true",
    "DISABLE_MICROCOMPACT": "false",
    "DISABLE_AUTO_COMPACT_THRESHOLD": "100",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "true",
    "DISABLE_INSTALLATION_CHECKS": "true",
    "DISABLE_AUTOUPDATER": "true",
    "DISABLE_TELEMETRY": "true",
    "CLAUDE_PLUGIN_ROOT": "/workspaces/claude-codepro/.claude/ccp",
    "CLAUDE_PROJECT_ROOT": "/workspaces/claude-codepro"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(basedpyright:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(mypy:*)",
      "Bash(python tests:*)",
      "Bash(python:*)",
      "Bash(pyright:*)",
      "Bash(pytest:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(uv add:*)",
      "Bash(uv pip show:*)",
      "Bash(uv pip:*)",
      "Bash(uv run:*)",
      "Edit",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Read",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__ide__*",
      "mcp__plugin_ccp_mem-search__*",
      "mcp__plugin_ccp_context7__*",
      "mcp__plugin_ccp_web-search__*",
      "mcp__plugin_ccp_web-fetch__*",
      "Skill(spec)",
      "Skill(sync)",
      "Skill(learn)",
      "LSP"
    ],
    "deny": []
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "/workspaces/claude-codepro/.claude/bin/ccp statusline",
    "padding": 0
  },
  "outputStyle": "default",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
